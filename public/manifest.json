{
  "manifest_version": 3,
  "name": "Canvas Helper",
  "version": "1.0",
  "description": "Fetch and display Canvas assignments with due dates",
  "action": {
    "default_popup": "index.html",
    "default_title": "Canvas Helper"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.instructure.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://*.instructure.com/*"
  ],
  "permissions": [
    "activeTab",
    "cookies",
    "scripting"
  ]
}
