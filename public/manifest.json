{
  "manifest_version": 3,
  "name": "Canvas Helper",
  "version": "1.0",
  "description": "Fetch and display Canvas assignments with due dates",
  "icons": {
    "16": "icons/canvas_helper_logo.png",
    "48": "icons/canvas_helper_logo.png",
    "128": "icons/canvas_helper_logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Canvas Helper",
    "default_icon": {
      "16": "icons/canvas_helper_logo.png",
      "48": "icons/canvas_helper_logo.png",
      "128": "icons/canvas_helper_logo.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.instructure.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://*.instructure.com/*"
  ],
  "permissions": [
    "activeTab",
    "cookies",
    "scripting",
    "storage"
  ]
}
